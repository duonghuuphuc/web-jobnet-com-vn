{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/static/**",
        "destination": "/403.html",
        "type": 302
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}
